<p id="notice"><%= notice %></p>

<h1>Star2minerals</h1>

<table>
  <thead>
    <tr>
      <th>Star</th>
      <th>Mineral</th>
      <th>Loc</th>
      <th>Max qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @star2minerals.each do |star2mineral| %>
      <tr>
        <td><%= star2mineral.star.name %></td>
        <td><%= star2mineral.mineral.name %></td>
		<td>
			<%= star2mineral.loc.x %>
			,
			<%= star2mineral.loc.y %>
		</td>
        <td><%= star2mineral.max_qty %></td>
        <td><%= link_to 'Show', star2mineral %></td>
        <td><%= link_to 'Edit', edit_star2mineral_path(star2mineral) %></td>
        <td><%= link_to 'Destroy', star2mineral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

