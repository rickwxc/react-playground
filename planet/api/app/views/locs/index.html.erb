<p id="notice"><%= notice %></p>

<h1>Locs</h1>

<table>
  <thead>
    <tr>
      <th>X</th>
      <th>Y</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locs.each do |loc| %>
      <tr>
        <td><%= loc.x %></td>
        <td><%= loc.y %></td>
        <td><%= link_to 'Show', loc %></td>
        <td><%= link_to 'Edit', edit_loc_path(loc) %></td>
        <td><%= link_to 'Destroy', loc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loc', new_loc_path %>
